@model SmartDocs.Models.SmartUser

@{
    Layout = "_Layout";
}

<h4>Change Display Name</h4>
<p>
    You can change the text below to update how your name appears in the menu bar and how your name will appear on any documents you generate in the future.
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Choices" asp-controller="Home">Back to Home</a>
</div>

