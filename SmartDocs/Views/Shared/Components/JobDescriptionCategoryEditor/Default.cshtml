@model SmartDocs.Models.JobDescription


@for (int j = 0; j < Model.Categories.Count(); j++)
{
<div class="row">    
    <div class="form-group col-sm-2 col-md-1">
        <label asp-for="@Model.Categories[j].Letter" class="control-label"></label>
        <input asp-for="@Model.Categories[j].Letter" class="form-control" style="text-align:center" />
        <span asp-validation-for="@Model.Categories[j].Letter" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-6">
        <label asp-for="@Model.Categories[j].Title" class="control-label"></label>
        <input asp-for="@Model.Categories[j].Title" class="form-control" />
        <span asp-validation-for="@Model.Categories[j].Title" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-2 col-md-1">
        <label asp-for="@Model.Categories[j].Weight" class="control-label"></label>
        <input asp-for="@Model.Categories[j].Weight" class="form-control" style="text-align:center"/>
        <span asp-validation-for="@Model.Categories[j].Weight" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-2">
        <label class="control-label">Add Details</label><br />
        <input type="button" value="Show Editor" category="@j" id="hideButton" class="btn btn-primary"  />
    </div>
</div>
    <div id="hideable-@j" class="row" hidden>
        <div class="col-sm-12">
            <div>
                <h4>Job Description Category Items</h4>
                @for (int i = 0; i < Model.Categories[j].PositionDescriptionItems.Count(); i++)
                {
                    <div class="form-group">
                        <textarea asp-for="@Model.Categories[j].PositionDescriptionItems[i].Detail" class="form-control"></textarea>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm-12">
            <div>
                <h4>Performance Standards</h4>
                @for (int i = 0; i < Model.Categories[j].PerformanceStandardItems.Count(); i++)
                {
                    <div class="form-group">
                        <textarea asp-for="@Model.Categories[j].PerformanceStandardItems[i].Detail" class="form-control"></textarea>
                    </div>
                }
            </div>
        </div>
    </div>
}
