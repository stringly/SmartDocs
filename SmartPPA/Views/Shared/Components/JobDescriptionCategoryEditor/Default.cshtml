@model List<SmartPPA.Models.Types.JobDescriptionCategory>

@foreach (var item in Model)
{

    <div class="form-group row">
        <div class="form-group col-sm-1">
            <label asp-for="@item.Letter" class="control-label"></label>
            <input asp-for="@item.Letter" class="form-control" />
            <span asp-validation-for="@item.Letter" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="@item.Title" class="control-label"></label>
            <input asp-for="@item.Title" class="form-control" />
            <span asp-validation-for="@item.Title" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-1">
            <label asp-for="@item.Weight" class="control-label"></label>
            <input asp-for="@item.Weight" class="form-control" />
            <span asp-validation-for="@item.Weight" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        @foreach (var positionItem in item.PositionDescriptionItems)
        {
            <div class="form-group col-sm-6">
                <label asp-for="@positionItem.Detail" class="control-label"></label>
                <textarea asp-for="@positionItem.Detail" class="form-control"></textarea>
                <span asp-validation-for="@positionItem.Detail" class="text-danger"></span>
            </div>
        }
        @foreach (var performanceItem in item.PerformanceStandardItems)
        {
            <div class="form-group col-sm-6">
                <label asp-for="@performanceItem.Detail" class="control-label"></label>
                <textarea asp-for="@performanceItem.Detail" class="form-control"></textarea>
                <span asp-validation-for="@performanceItem.Detail" class="text-danger"></span>
            </div>
        }
    </div>
}

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>